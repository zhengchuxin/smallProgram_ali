page {
  background: #f2f2f2;
}

.share-list {
  display: block;
  position: absolute;
  right: 0;
}

button::after {
  border: none;
}

button {
  background-color: #fff;
}

button {
  border-radius: 0;
}

.swiper {
  height: 200px;
  background: #fff;
}

.img-one {
  width: 100%;
  height: 200px;
}

.detail-row {
  background: #fff;
  padding: 18rpx;
  display: flex;
  flex-direction: row;
}

.detail-col {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.detail-title {
  font-size: 14px;
  font-weight: 600;
  letter-spacing: 1.2px;
}

.shop-price {
  margin-top: 26rpx;
  color: #c6ab70;
  font-size: 16px;
  font-weight: 500;
}

.add-shop-icon-list {
  margin-top: -12rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  align-content: flex-end;
  align-items: flex-end;
  flex: 1;
  margin-right: 6px;
}

.share-text {
  margin-top: -20rpx;
  font-size: 18rpx;
}

.detail-tip {
  display: flex;
  flex-direction: row;
  background-color: #fff;
  font-size: 24rpx;
  padding: 15rpx 10rpx;
  border-top: 2rpx solid #f2f2f2;
  border-bottom: 2rpx solid #ececec;
  margin-bottom: 16rpx;
}

.pei {
  display: flex;
  flex: 1;
  justify-content: flex-start;
}

.is-sell {
  display: flex;
  flex: 1;
  justify-content: center;
}

.less-sell {
  display: flex;
  flex: 1;
  justify-content: flex-end;
}

.popup {
  height: 320px;
}

.center-text {
  display: flex;
  justify-content: center;
  margin-top: 10px;
  margin-bottom: 10px;
}

.shop {
  display: flex;
  flex-direction: row;
  padding: 18rpx;
  background: #fff;
  margin: 16rpx 0;
}

.shop-avator {
  border-radius: 5rpx;
  width: 40px;
  height: 40px;
}

.shop-name {
  font-size: 14px;
  color: #9b9b9b;
  padding-left: 14rpx;
}

.to-shop-icon {
  border-radius: 10rpx;
  font-size: 18rpx;
  display: flex;
  padding: 8rpx;
  height: 14rpx;
  position: absolute;
  right: 30rpx;
  border: 2rpx solid #c6ab70;
  justify-content: center;
  align-content: center;
  align-items: center;
  color: #c6ab70;
}

.detailInfoImg {
  width: 100%;
}

.shop-detail {
  display: flex;
  flex-direction: column;
  background: #fff;
  justify-content: center;
  align-content: center;
  align-items: center;
  margin-bottom: 100px;
}

.shop-detail-title {
  display: flex;
  justify-content: center;
  padding-top: 16rpx;
  padding-bottom: 20rpx;
  margin-bottom: 16rpx;
  font-size: 28rpx;
  width: 160rpx;
  border-bottom: 4rpx solid #c6ab70;
}
